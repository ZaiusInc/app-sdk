{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "SourceSchemaField": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "display_name": {
                    "type": "string"
                },
                "format": {
                    "const": "url",
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "primary": {
                    "type": "boolean"
                },
                "type": {
                    "anyOf": [
                        {
                            "enum": [
                                "boolean",
                                "float",
                                "int",
                                "long",
                                "string"
                            ],
                            "type": "string",
                            "description": "Primitive types. For custom types, use the name defined in custom_types. Application must verify custom type references."
                        },
                        {
                            "type": "string",
                            "pattern": "^\\w+$",
                            "description": "Custom type reference. Must match a name in custom_types."
                        },
                        {
                            "type": "string",
                            "pattern": "^\\[\\w+\\]$",
                            "description": "Array type. For arrays of custom types, the type inside brackets must match a custom_types name."
                        }
                    ]
                },
                "fields": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/SourceSchemaField"
                    }
                },
                "items": {
                    "$ref": "#/definitions/SourceSchemaField"
                }
            },
            "required": [
                "description",
                "display_name",
                "name",
                "type"
            ],
            "type": "object"
        }
    },
    "properties": {
        "description": {
            "type": "string"
        },
        "display_name": {
            "type": "string"
        },
        "fields": {
            "items": {
                "$ref": "#/definitions/SourceSchemaField"
            },
            "type": "array"
        },
        "name": {
            "type": "string"
        },
        "custom_types": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "display_name": {
                        "type": "string"
                    },
                    "fields": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/SourceSchemaField"
                        }
                    }
                },
                "required": [
                    "name",
                    "description",
                    "display_name",
                    "fields"
                ]
            }
        }
    },
    "required": [
        "description",
        "display_name",
        "fields",
        "name"
    ],
    "type": "object"
}

