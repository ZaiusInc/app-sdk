{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "AppFunction": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                },
                "global": {
                    "type": "boolean"
                }
            },
            "required": [
                "description",
                "entry_point"
            ],
            "type": "object"
        },
        "AppJob": {
            "additionalProperties": false,
            "properties": {
                "cron": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                },
                "parameters": {
                    "$ref": "#/definitions/ValueHash",
                    "description": "An object with some restrictions. An interface that follows the ValueHash interface\ncan be safely written to any storage option."
                }
            },
            "required": [
                "description",
                "entry_point"
            ],
            "type": "object"
        },
        "AppLiquidExtension": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                },
                "input": {
                    "additionalProperties": {
                        "additionalProperties": false,
                        "properties": {
                            "description": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean"
                            },
                            "type": {
                                "enum": [
                                    "any",
                                    "boolean",
                                    "number",
                                    "string"
                                ],
                                "type": "string"
                            }
                        },
                        "required": [
                            "description",
                            "required",
                            "type"
                        ],
                        "type": "object"
                    },
                    "type": "object"
                }
            },
            "required": [
                "description",
                "entry_point"
            ],
            "type": "object"
        },
        "AppQueue": {
            "additionalProperties": false,
            "properties": {
                "batch_size": {
                    "type": "number"
                },
                "batch_timeout": {
                    "type": "number"
                },
                "consumer": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "queue_type": {
                    "enum": [
                        "fifo",
                        "standard"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "consumer",
                "description"
            ],
            "type": "object"
        },
        "AppRuntime": {
            "enum": [
                "node12",
                "node18"
            ],
            "type": "string"
        },
        "CampaignTargeting": {
            "additionalProperties": false,
            "description": "Defines the targeting requirements for a channel.",
            "properties": {
                "event_data": {
                    "additionalProperties": {
                        "type": [
                            "string",
                            "number",
                            "boolean"
                        ]
                    },
                    "description": "Any additional data to include on the events generated by the campaign run.",
                    "type": "object"
                },
                "identifier": {
                    "description": "The customer identifier field to target.",
                    "type": "string"
                }
            },
            "required": [
                "identifier"
            ],
            "type": "object"
        },
        "ChannelRateLimit": {
            "additionalProperties": false,
            "description": "Defines a rate limit for channel delivery in to form of <count> per <n> <unit>\nwhere unit is `second`, `minute`, `hour`, `day`, or <number> of seconds.\nE.g., count: 100, period: 15, unit: second => 100 per 15 seconds",
            "properties": {
                "count": {
                    "description": "The number of delivery requests (batches) per period of time",
                    "type": "number"
                },
                "grouping": {
                    "description": "Whether this rate limit applies to the app as a whole or per each install",
                    "enum": [
                        "app",
                        "install"
                    ],
                    "type": "string"
                },
                "period": {
                    "description": "The number of units of time to measure the rate limit over",
                    "type": "number"
                },
                "unit": {
                    "description": "The unit of time applied to the perioid",
                    "enum": [
                        "day",
                        "hour",
                        "minute",
                        "second"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "count",
                "grouping",
                "period",
                "unit"
            ],
            "type": "object"
        },
        "ChannelType": {
            "enum": [
                "ad",
                "api",
                "app_push",
                "direct_mail",
                "email",
                "facebook_messenger",
                "segment_sync",
                "sms",
                "test_channel",
                "web_embed",
                "web_modal",
                "web_push",
                "whatsapp"
            ],
            "type": "string"
        },
        "ValueHash": {
            "additionalProperties": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/ValueHash"
                    },
                    {
                        "items": {
                            "anyOf": [
                                {
                                    "$ref": "#/definitions/ValueHash"
                                },
                                {
                                    "type": [
                                        "null",
                                        "string",
                                        "number",
                                        "boolean"
                                    ]
                                }
                            ],
                            "description": "A value type that is safe to write to any storage option"
                        },
                        "type": "array"
                    },
                    {
                        "type": [
                            "null",
                            "string",
                            "number",
                            "boolean"
                        ]
                    }
                ]
            },
            "description": "An object with some restrictions. An interface that follows the ValueHash interface\ncan be safely written to any storage option.",
            "type": "object"
        }
    },
    "properties": {
        "channel": {
            "additionalProperties": false,
            "properties": {
                "delivery": {
                    "additionalProperties": false,
                    "properties": {
                        "batch_size": {
                            "type": "number"
                        },
                        "concurrent_batches": {
                            "type": "number"
                        },
                        "rate_limits": {
                            "items": {
                                "$ref": "#/definitions/ChannelRateLimit"
                            },
                            "type": "array"
                        }
                    },
                    "type": "object"
                },
                "metrics": {
                    "additionalProperties": false,
                    "properties": {
                        "attributable": {
                            "items": {
                                "enum": [
                                    "click",
                                    "delivery",
                                    "engage",
                                    "open"
                                ],
                                "type": "string"
                            },
                            "type": "array"
                        },
                        "delivery": {
                            "items": {
                                "enum": [
                                    "delivery",
                                    "delivery_unknown",
                                    "sent"
                                ],
                                "type": "string"
                            },
                            "type": "array"
                        },
                        "disengagement": {
                            "items": {
                                "enum": [
                                    "disengage",
                                    "list_unsubscribe",
                                    "opt-out",
                                    "spam_report"
                                ],
                                "type": "string"
                            },
                            "type": "array"
                        },
                        "engagement": {
                            "items": {
                                "enum": [
                                    "click",
                                    "engage",
                                    "open"
                                ],
                                "type": "string"
                            },
                            "type": "array"
                        },
                        "reachability": {
                            "items": {
                                "enum": [
                                    "hard_bounce",
                                    "soft_bounce"
                                ],
                                "type": "string"
                            },
                            "type": "array"
                        }
                    },
                    "type": "object"
                },
                "options": {
                    "additionalProperties": false,
                    "properties": {
                        "prepare": {
                            "type": "boolean"
                        },
                        "template_preview": {
                            "type": "boolean"
                        }
                    },
                    "type": "object"
                },
                "targeting": {
                    "anyOf": [
                        {
                            "items": {
                                "$ref": "#/definitions/CampaignTargeting"
                            },
                            "type": "array"
                        },
                        {
                            "enum": [
                                "dynamic"
                            ],
                            "type": "string"
                        }
                    ]
                },
                "type": {
                    "$ref": "#/definitions/ChannelType"
                }
            },
            "required": [
                "targeting",
                "type"
            ],
            "type": "object"
        },
        "environment": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "functions": {
            "additionalProperties": {
                "$ref": "#/definitions/AppFunction"
            },
            "type": "object"
        },
        "jobs": {
            "additionalProperties": {
                "$ref": "#/definitions/AppJob"
            },
            "type": "object"
        },
        "liquid_extensions": {
            "additionalProperties": {
                "$ref": "#/definitions/AppLiquidExtension"
            },
            "type": "object"
        },
        "meta": {
            "additionalProperties": false,
            "properties": {
                "app_id": {
                    "type": "string"
                },
                "availability": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "categories": {
                    "items": {
                        "enum": [
                            "Accounting & Finance",
                            "Advertising",
                            "Analytics & Reporting",
                            "Attribution & Linking",
                            "CDP / DMP",
                            "CRM",
                            "Channel",
                            "Commerce Platform",
                            "Content Management",
                            "Customer Experience",
                            "Data Quality & Enrichment",
                            "Lead Capture",
                            "Loyalty & Rewards",
                            "Marketing",
                            "Merchandising & Products",
                            "Offers",
                            "Personalization & Content",
                            "Point of Sale",
                            "Productivity",
                            "Reviews & Ratings",
                            "Site & Content Experience",
                            "Subscriptions",
                            "Surveys & Feedback",
                            "Testing & Utilities"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "contact_email": {
                    "type": "string"
                },
                "display_name": {
                    "type": "string"
                },
                "summary": {
                    "type": "string"
                },
                "support_url": {
                    "type": "string"
                },
                "vendor": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "app_id",
                "availability",
                "categories",
                "contact_email",
                "display_name",
                "summary",
                "support_url",
                "vendor",
                "version"
            ],
            "type": "object"
        },
        "outbound_domains": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "queues": {
            "additionalProperties": {
                "$ref": "#/definitions/AppQueue"
            },
            "type": "object"
        },
        "runtime": {
            "$ref": "#/definitions/AppRuntime"
        }
    },
    "required": [
        "meta",
        "runtime"
    ],
    "type": "object"
}

