            "required": [
                "app_id",
                "categories",
                "contact_email",
                "display_name",
                "summary",
                "support_url",
                "vendor",
                "version"
            ],
            "type": "object"
        },
        "runtime": {
            "enum": [
                "node12"
            ],
            "type": "string"
        }
    },
    "required": [
        "meta",
        "runtime"
    ],
    "type": "object"
