{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "AppFunction": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                }
            },
            "required": [
                "description",
                "entry_point"
            ],
            "type": "object"
        },
        "AppJob": {
            "additionalProperties": false,
            "properties": {
                "cron": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                },
                "parameters": {
                    "$ref": "#/definitions/ValueHash",
                    "description": "An object with some restrictions. An interface that follows the ValueHash interface\ncan be safely written to any storage option."
                }
            },
            "required": [
                "description",
                "entry_point"
            ],
            "type": "object"
        },
        "AppLiquidExtension": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                },
                "input": {
                    "additionalProperties": {
                        "additionalProperties": false,
                        "properties": {
                            "description": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean"
                            },
                            "type": {
                                "enum": [
                                    "any",
                                    "boolean",
                                    "number",
                                    "string"
                                ],
                                "type": "string"
                            }
                        },
                        "required": [
                            "description",
                            "required",
                            "type"
                        ],
                        "type": "object"
                    },
                    "type": "object"
                }
            },
            "required": [
                "description",
                "entry_point"
            ],
            "type": "object"
        },
        "CampaignTargeting": {
            "additionalProperties": false,
            "description": "Defines the targeting requirements for a channel.",
            "properties": {
                "event_data": {
                    "additionalProperties": {
                        "type": [
                            "string",
                            "number",
                            "boolean"
                        ]
                    },
                    "description": "Any additional data to include on the events generated by the campaign run.",
                    "type": "object"
                },
                "identifier": {
                    "description": "The customer identifier field to target.",
                    "type": "string"
                }
            },
            "required": [
                "identifier"
            ],
            "type": "object"
        },
        "ChannelType": {
            "enum": [
                "ad",
                "api",
                "app_push",
                "direct_mail",
                "email",
                "facebook_messenger",
                "segment_sync",
                "sms",
                "test_channel",
                "web_embed",
                "web_modal",
                "web_push",
                "whatsapp"
            ],
            "type": "string"
        },
        "ValueHash": {
            "additionalProperties": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/ValueHash"
                    },
                    {
                        "items": {
                            "anyOf": [
                                {
                                    "$ref": "#/definitions/ValueHash"
                                },
                                {
                                    "type": [
                                        "null",
                                        "string",
                                        "number",
                                        "boolean"
                                    ]
                                }
                            ]
                        },
                        "type": "array"
                    },
                    {
                        "type": [
                            "null",
                            "string",
                            "number",
                            "boolean"
                        ]
                    }
                ]
            },
            "description": "An object with some restrictions. An interface that follows the ValueHash interface\ncan be safely written to any storage option.",
            "type": "object"
        }
    },
    "properties": {
        "channel": {
            "additionalProperties": false,
            "properties": {
                "events": {
                    "additionalProperties": false,
                    "properties": {
                        "active_actions": {
                            "items": {
                                "enum": [
                                    "click",
                                    "disengage",
                                    "engage",
                                    "impression",
                                    "open"
                                ],
                                "type": "string"
                            },
                            "type": "array"
                        },
                        "delivery": {
                            "type": "boolean"
                        },
                        "delivery_unknown": {
                            "type": "boolean"
                        },
                        "hard_bounce": {
                            "type": "boolean"
                        },
                        "send": {
                            "type": "boolean"
                        },
                        "soft_bounce": {
                            "type": "boolean"
                        },
                        "spam_report": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "delivery",
                        "delivery_unknown",
                        "hard_bounce",
                        "send",
                        "soft_bounce",
                        "spam_report"
                    ],
                    "type": "object"
                },
                "options": {
                    "additionalProperties": false,
                    "properties": {
                        "prepare": {
                            "type": "boolean"
                        }
                    },
                    "type": "object"
                },
                "targeting": {
                    "anyOf": [
                        {
                            "items": {
                                "$ref": "#/definitions/CampaignTargeting"
                            },
                            "type": "array"
                        },
                        {
                            "enum": [
                                "dynamic"
                            ],
                            "type": "string"
                        }
                    ]
                },
                "type": {
                    "$ref": "#/definitions/ChannelType"
                }
            },
            "required": [
                "events",
                "targeting",
                "type"
            ],
            "type": "object"
        },
        "environment": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "functions": {
            "additionalProperties": {
                "$ref": "#/definitions/AppFunction"
            },
            "type": "object"
        },
        "jobs": {
            "additionalProperties": {
                "$ref": "#/definitions/AppJob"
            },
            "type": "object"
        },
        "liquid_extensions": {
            "additionalProperties": {
                "$ref": "#/definitions/AppLiquidExtension"
            },
            "type": "object"
        },
        "meta": {
            "additionalProperties": false,
            "properties": {
                "app_id": {
                    "type": "string"
                },
                "categories": {
                    "items": {
                        "enum": [
                            "Accounting & Finance",
                            "Advertising",
                            "Analytics & Reporting",
                            "Attribution & Linking",
                            "CDP / DMP",
                            "CRM",
                            "Channel",
                            "Commerce Platform",
                            "Content Management",
                            "Customer Experience",
                            "Data Quality & Enrichment",
                            "Lead Capture",
                            "Loyalty & Rewards",
                            "Marketing",
                            "Merchandising & Products",
                            "Offers",
                            "Personalization & Content",
                            "Point of Sale",
                            "Productivity",
                            "Reviews & Ratings",
                            "Site & Content Experience",
                            "Surveys & Feedback",
                            "Testing & Utilities"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "contact_email": {
                    "type": "string"
                },
                "display_name": {
                    "type": "string"
                },
                "summary": {
                    "type": "string"
                },
                "support_url": {
                    "type": "string"
                },
                "vendor": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "app_id",
                "categories",
                "contact_email",
                "display_name",
                "summary",
                "support_url",
                "vendor",
                "version"
            ],
            "type": "object"
        },
        "runtime": {
            "enum": [
                "node12"
            ],
            "type": "string"
        }
    },
    "required": [
        "meta",
        "runtime"
    ],
    "type": "object"
}

