{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "AppFunction": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                },
                "method": {
                    "anyOf": [
                        {
                            "items": {
                                "enum": [
                                    "CONNECT",
                                    "DELETE",
                                    "GET",
                                    "HEAD",
                                    "OPTIONS",
                                    "PATCH",
                                    "POST",
                                    "PUT",
                                    "TRACE"
                                ],
                                "type": "string"
                            },
                            "type": "array"
                        },
                        {
                            "enum": [
                                "CONNECT",
                                "DELETE",
                                "GET",
                                "HEAD",
                                "OPTIONS",
                                "PATCH",
                                "POST",
                                "PUT",
                                "TRACE"
                            ],
                            "type": "string"
                        }
                    ]
                }
            },
            "required": [
                "description",
                "entry_point",
                "method"
            ],
            "type": "object"
        },
        "AppJob": {
            "additionalProperties": false,
            "properties": {
                "cron": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "entry_point": {
                    "type": "string"
                },
                "parameters": {
                    "$ref": "#/definitions/ValueHash"
                }
            },
            "required": [
                "description",
                "entry_point"
            ],
            "type": "object"
        },
        "ValueHash": {
            "additionalProperties": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/ValueHash"
                    },
                    {
                        "items": {
                            "anyOf": [
                                {
                                    "$ref": "#/definitions/ValueHash"
                                },
                                {
                                    "type": [
                                        "null",
                                        "string",
                                        "number",
                                        "boolean"
                                    ]
                                }
                            ]
                        },
                        "type": "array"
                    },
                    {
                        "type": [
                            "null",
                            "string",
                            "number",
                            "boolean"
                        ]
                    }
                ]
            },
            "type": "object"
        }
    },
    "properties": {
        "defaults": {
            "additionalProperties": false,
            "properties": {
                "environment": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object"
                },
                "permissions": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            },
            "type": "object"
        },
        "functions": {
            "additionalProperties": {
                "$ref": "#/definitions/AppFunction"
            },
            "type": "object"
        },
        "jobs": {
            "additionalProperties": {
                "$ref": "#/definitions/AppJob"
            },
            "type": "object"
        },
        "meta": {
            "additionalProperties": false,
            "properties": {
                "app_id": {
                    "type": "string"
                },
                "categories": {
                    "items": {
                        "enum": [
                            "Accounting & Finance",
                            "Advertising",
                            "Analytics & Reporting",
                            "Attribution & Linking",
                            "CRM",
                            "Channel",
                            "Content Management",
                            "Customer Success",
                            "Data Quality & Enrichment",
                            "Database / Connector",
                            "Lead Capture",
                            "Loyalty & Offers",
                            "Marketing Automation",
                            "Personalization & Content",
                            "Point of Sale",
                            "Productivity",
                            "Reviews & Ratings",
                            "Surveys & Feedback",
                            "Testing & Utilities",
                            "eCommerce"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "contact_email": {
                    "type": "string"
                },
                "display_name": {
                    "type": "string"
                },
                "summary": {
                    "type": "string"
                },
                "support_url": {
                    "type": "string"
                },
                "vendor": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
